generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  photo     String?
  material  Material[]
  semester  Semester
  role      Role
  score     Int     
}

enum Role {
  STUDENT
  ADMIN
}

enum Semester {
  One
  Two
  Three
  Four
  Five
  Six
  Seven
  Eight
}

model Material {
  id        Int      @id @default(autoincrement())
  subject   Subjects
  link      String
  type      MaterialType
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  accepted  Boolean
  semester  Semester
  title     String
  description String?
}

enum MaterialType {
  DOCUMENT
  VIDEO
  OTHER
}

enum Subjects {
  CALC_1
  CALC_2
  PHYSICS_1
  PHYSICS_2
  INTRO_TO_CS
  // more subjects here
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  due_date  String?
  type      AnnouncementType
  semester  Semester
}

enum AnnouncementType {
  Assignment
  Quiz
  Other
}