generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  photo     String?
  material  Material[]
  level     Level
  role      Role
}

enum Role {
  STUDENT
  ADMIN
}

enum Level {
  One
  Two
  Three
  Four
}

model Material {
  id        Int      @id @default(autoincrement())
  subject   Subjects
  link      String
  type      MaterialType
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

enum MaterialType {
  YOUTUBE
  DRIVE
  TELEGRAM
  OTHER
}

enum Subjects {
  CALC_1
  CALC_2
  PHYSICS_1
  PHYSICS_2
  INTRO_TO_CS
  // more subjects here
}

model Leaderboard {
  id        Int      @id @default(autoincrement())
  name      String
  points    Int
  level    Level
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  thumbnail String?
  type      AnnouncementType
  level     Level
}

enum AnnouncementType {
  Assignment
  Quiz
  Other
}