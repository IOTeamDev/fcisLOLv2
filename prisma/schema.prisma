generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  data      Data[]
}

model Data {
  id        Int      @id @default(autoincrement())
  subject   Subjects
  link      String
  type      DataType
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

enum DataType {
  YOUTUBE
  DRIVE
  TELEGRAM
  OTHER
}

enum Subjects {
  CALC_1
  CALC_2
  PHYSICS_1
  PHYSICS_2
  INTRO_TO_CS
  // more subjects here
}

model Leaderboard {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  points    Int
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  thumbnail String?
  type      AnnouncementType
}

enum AnnouncementType {
  Assignment
  Quiz
  Other
}